	width: 2rem;
	opacity: 0.05;
	transition: 0.25s;
}

.container .list .num h3 {
	position: relative;
	left: -1.5rem;
	color: #3d3d3d;
	font-size: 1.85rem;
	transition: 0.25s;
}

.container .list .num:hover {
	background-color: #fafafa;
	cursor: pointer;
}

.container .list .num:hover:before {
	opacity: 0.2;
}

.container .list .num:hover h3 {
	left: 1rem;
}

.message {
	color: #fff;
	text-align: center;
	text-transform: uppercase;
	margin-top: 2rem;
}


