doctype html
html
  head
    title Attendance
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style.css')
  body
  block content
  h1= title
    form(action="/" method="POST")

      label.label lesson_id
        input.input(type="text" name="lesson_id" placeholder="SWP/18.04")
  ul.list-group    
    each att in attendances
    li.list-group-item
      p #{att.student_fullname} #{att.points}